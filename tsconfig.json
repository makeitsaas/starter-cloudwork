{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./app",
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "paths": {
      "@custom-modules/*": [
        "../ansible/modules/*",
        "../ansible/modules/node-ansible/*",
        "../ansible/modules/ansible-playbook-runner/*",
        "../ansible/modules/ansible-output-parser/*",
        "../ansible/modules/ansible-execution-client/*",
        "../src/shared/*"
      ],
      "@config": [
        "../config"
      ],
      "@fake": [
        "../src/shared/fake"
      ],
      "@decorators": [
        "../src/core/alias/decorators"
      ],
      "@session": [
        "../src/core/session/session"
      ],
      "@databases": [
        "../src/core/databases"
      ],
      "@errors": [
        "../src/core/alias/errors"
      ],
      "@ansible": [
        "../ansible"
      ],
      "@core": [
        "../src/core/index"
      ],
      "@utils": [
        "../src/shared/utils"
      ],
      "@entities": [
        "../src/core/alias/entities"
      ]
    }
  }
}
